{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "es6": true,
    "jest": true
  },
  "plugins": [
    "flowtype"
  ],
  "settings": {
    "import/resolver": {
      "alias": [
        [
          "test",
          "./test"
        ],
        [
          "@",
          "./src"
        ]
      ]
    }
  }
}
