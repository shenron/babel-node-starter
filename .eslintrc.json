{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "plugin:flowtype/recommended",
    "airbnb"
  ],
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "plugins": [
    "flowtype",
    "flowtype-errors"
  ],
  "rules": {
    "flowtype-errors/show-errors": 2,
    "flowtype-errors/show-warnings": 1
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    },
    "import/resolver": {
      "alias": [
        [
          "test",
          "./test"
        ],
        [
          "@",
          "./src"
        ]
      ]
    }
  }
}
